<Window x:Class="Homework6_Lab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework6_Lab1"
        mc:Ignorable="d"
        Title="Calculator" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="68" Name="LeftValue"/>
        <TextBox HorizontalAlignment="Left" Margin="177,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="68" Name="RightValue"/>
        <ComboBox Name="OptionsBox" HorizontalAlignment="Left" Margin="100,10,0,0" VerticalAlignment="Top" Width="40" Height="18">
            <ComboBoxItem Content="+"/>
            <ComboBoxItem Content="-"/>
            <ComboBoxItem Content="*"/>
            <ComboBoxItem Content="/"/>
            <ComboBoxItem Content="%"/>
        </ComboBox>
        <Button Content="Calculate" HorizontalAlignment="Left" Margin="100,44,0,0" VerticalAlignment="Top" Name="CalculateButton" Click="CalculateButton_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,69,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="60" Width="253" Name="Results"/>

    </Grid>
</Window>
