<Window x:Class="Homework3_Part1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework3_Part1"
        mc:Ignorable="d"
        Title="Pig Latin Converter" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Please Enter Your Full Name:" TextAlignment="Center" VerticalAlignment="Top" Height="26" Width="174" RenderTransformOrigin="0.66,0.455" Name="TitleBlock"/>
        <TextBox HorizontalAlignment="Center" Margin="0,57,0,0" TextWrapping="Wrap" Text="John Smith" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.735,-0.777" Name="NameBox"/>
        <Button Content="Submit" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" Height="22" Width="94" Name="SubmitButton" Click="SubmitButton_Click"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,127,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="38" Width="275" TextAlignment="Center" Name="OutputBlock"/>

    </Grid>
</Window>
